{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run VibeShield Extension (Root)",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/vibeshield/packages/ide-extension"
            ],
            "outFiles": [
                "${workspaceFolder}/vibeshield/packages/ide-extension/dist/**/*.js"
            ]
        }
    ]
}