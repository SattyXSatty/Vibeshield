{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "composite": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@vibeshield/*": [
                "packages/*/src",
                "shared/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}